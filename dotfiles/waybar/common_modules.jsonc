{
    "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": false,
    "format": "{name}"
    },
    "custom/add_workspace": {
        "format": "ÔÅß",
        "on-click": "hyprctl dispatch workspace empty",
        "tooltip": false
    },
    "custom/close_window": {
        "format": "ÔÄç",  /* The "X" Icon */
        "on-click": "hyprctl dispatch killactive",
        "tooltip": false
    },
    "clock":
    {
        "format": "{:%H:%M:%S}",
        "tooltip": true,
        "tooltip-format": "{:%Y. %m. %d.}",
        "interval": 1
    },
    "pulseaudio": {
    "format": "{volume}% {icon} ",
    "format-bluetooth": "{volume}% {icon}Ôäî",
    "format-muted": "üîá",
    "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄß", "ÔÄ®"]
        },
    "scroll-step": 1,
    "on-click": "pkill pavucontrol || pavucontrol -t 3",
    "ignored-sinks": ["Easy Effects Sink"]
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) Ôá´ ",
        "format-ethernet": "Connected ÔÉÅ ",
        "format-disconnected": "Disconnected ‚ö† ",
        "tooltip-format": "{ifname}: {ipaddr} via {gwaddr}",
        "tooltip": true,
        "on-click": "nm-connection-editor"
    },
    "bluetooth": {
        "format": "{status} Ôäî",
        "format-connected": "{device_alias} Ôäî",
        "format-connected-battery": "{device_alias} {device_battery_percentage}% Ôäî",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
        "on-click": "blueman-manager"
    },
    "custom/ddc1": {
        "format": "{}% ÔÑà ",
        "exec": "~/.config/waybar/scripts/ddc_brightness.sh 1 get",
        "on-scroll-up": "~/.config/waybar/scripts/ddc_brightness.sh 1 up",
        "on-scroll-down": "~/.config/waybar/scripts/ddc_brightness.sh 1 down",
        "signal": 1,       /* <--- Listens for 'pkill -RTMIN+1 waybar' */
        "interval": "once", /* <--- Only runs once at startup, then waits for signal */
        "tooltip": false
    },

    "custom/ddc2": {
        "format": "{}% ÔÑà ",
        "exec": "~/.config/waybar/scripts/ddc_brightness.sh 2 get",
        "on-scroll-up": "~/.config/waybar/scripts/ddc_brightness.sh 2 up",
        "on-scroll-down": "~/.config/waybar/scripts/ddc_brightness.sh 2 down",
        "signal": 2,       /* <--- Listens for 'pkill -RTMIN+2 waybar' */
        "interval": "once",
        "tooltip": false
    },
    "custom/launcher": {
        "format": "Menu Ôåì ",
        "on-click": "rofi -show drun",
        "tooltip": false
    },
    "custom/power": {
        "format": " Power ÔÄë ",
        "on-click": "~/.config/waybar/scripts/powermenu.sh",
        "tooltip": false
    },
    "custom/keyboard":{
        "format":"Keyboard ÔÑú ",
        "on-click": "pkill wvkbd-mobint || wvkbd-mobintl -R 10 -L 300 --fn \"JetBrainsMono Nerd Font 20\" --bg 604c6c00 --fg 604c6c --fg-sp 413450",
        "tooltip": false
    }
}